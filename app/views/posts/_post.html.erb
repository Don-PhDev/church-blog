<h1>Post</h1>

<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <small><%= post.posted_time_passed %></small>
  </p>

  <p>
    <strong><%= pluralize(post.comments.count, "comment") %></strong>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>
</div>
